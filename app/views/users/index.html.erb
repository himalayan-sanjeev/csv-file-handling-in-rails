<p style="color: green"><%= notice %></p>

<h1>Users</h1>
<hr>
<%= link_to "Export into CSV", export_into_csv_path %><br><br>
<%= link_to "New user", new_user_path %><br>
<hr>
<table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">S.N.</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Address City</th>
        <th scope="col">Address State</th>
        <th scope="col">Mobile Number</th>
        <th scope="col">Email</th>
        <th scope="col">Date of Birth</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.address_city %></td>
        <td><%= user.address_state %></td>
        <td><%= user.mobile_number %></td>
        <td><%= user.email %></td>
        <td><%= user.date_of_birth %></td>
        <td><%= link_to "View", user_path(user), class:"btn btn-warning" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <hr>